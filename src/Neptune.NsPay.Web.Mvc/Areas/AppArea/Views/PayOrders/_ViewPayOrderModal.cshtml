            </div>
            <div class="col-6 mb-3">
                <h6>@L("FeeMoney") :</h6>
                @Model.PayOrder.FeeMoney
            </div>
            <div class="col-6 mb-3">
                <h6>@L("OrderTime") :</h6>
                @Model.PayOrder.OrderTime
            </div>
            <div class="col-6 mb-3">
                <h6>@L("CallBackTime") :</h6>
