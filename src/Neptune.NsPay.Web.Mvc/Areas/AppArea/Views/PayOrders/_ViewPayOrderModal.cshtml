            </div>
            <div class="col-6 mb-3">
                <h6>@L("ScoreStatus") :</h6>
                @L("Enum_PayOrderScoreStatusEnum_" + (int)Model.PayOrder.ScoreStatus)
            </div>
            <div class="col-6 mb-3">
                <h6>@L("PayTypeStr") :</h6>
                @Model.PayOrder.PayTypeStr
            </div>
        </div>

    </div>
</div>

@await Html.PartialAsync("~/Areas/AppArea/Views/Common/Modals/_ModalFooterWithClose.cshtml")

