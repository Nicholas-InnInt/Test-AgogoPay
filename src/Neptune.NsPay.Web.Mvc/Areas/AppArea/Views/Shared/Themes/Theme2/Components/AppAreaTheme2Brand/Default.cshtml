@using Neptune.NsPay.Web.Areas.AppArea.Models.Layout
@using Neptune.NsPay.Web.Areas.AppArea.Views.Shared.Components.AppAreaLogo
@model HeaderViewModel
@{
    Layout = null;
    var theme = await GetTheme();
}

<div class="header-logo me-5 me-md-10 flex-grow-1 flex-lg-grow-0">
    <a href="@Url.Action("Index", "Home", new {area = string.Empty})">
        @await Component.InvokeAsync(typeof(AppAreaLogoViewComponent), new {logoSkin = theme.BaseSettings.Layout.DarkMode ? "dark-sm": "light-sm", logoClass = "logo-default h-25px"})
        @await Component.InvokeAsync(typeof(AppAreaLogoViewComponent), new {logoSkin = theme.BaseSettings.Layout.DarkMode ? "dark": "light", logoClass = "logo-sticky h-25px"})
    </a>
</div>
