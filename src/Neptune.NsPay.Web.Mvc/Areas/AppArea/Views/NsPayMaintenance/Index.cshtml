@using Neptune.NsPay.Authorization
@using Neptune.NsPay.Web.Areas.AppArea.Models.NsPayMaintenance
@using Neptune.NsPay.Web.Areas.AppArea.Startup
@model NsPayMaintenanceViewModel
@{
    ViewBag.CurrentPageName = AppAreaPageNames.NsPays.NsPayMaintenance;
}
@section Scripts
{
    <script abp-src="/view-resources/Areas/AppArea/Views/NsPayMaintenance/Index.js" asp-append-version="true"></script>
}
   
<div class="@(await GetContainerClass())">   
    <div class="card card-custom gutter-b">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="row mb-3 mt-5">
                    <div class="col-xl-6">
                        <p>@L("RedisResetHeaderInfo")</p>
                    </div>
                    <div class="col-xl-6 text-end">
                        <button id="ClearAllCachesButton" class="btn btn-primary float-end">
                            <i class="fa fa-recycle"></i> @L("ResetAll")
                        </button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-12">
                        <table class="table align-middle table-row-dashed fs-6 gy-5 dataTable dtr-inline no-footer">
                            <tbody>
                            @foreach (var cache in Model.Caches)
                            {
                                <tr>
                                    <td>
                                        <span>@cache.Name</span>
                                        <button class="btn btn-primary btn-sm pull-right btn-clear-cache" data-cache-name="@cache.Name">
                                            <i class="fa fa-recycle"></i> @L("Reset")
                                        </button>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
